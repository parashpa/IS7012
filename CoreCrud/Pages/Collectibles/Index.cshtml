@page
@model CoreCrud.Pages.Collectibles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>List of collectibles</h2>
<img src="~/Images/Book4.jpg" alt="Book4" width="300" height="100" float="right" />
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Forsale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collectible[0].Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Collectible) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forsale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.PublisherName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
