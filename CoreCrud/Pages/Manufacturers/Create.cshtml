@page
@model CoreCrud.Pages.Manufacturers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Manufacturer entry</h1>
<img src="~/Images/Add_here.jpg" alt="Add_here" width="300" height="100" float="right" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer.PublisherName" class="control-label"></label>
                <input asp-for="Manufacturer.PublisherName" class="form-control" />
                <span asp-validation-for="Manufacturer.PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Location" class="control-label"></label>
                <input asp-for="Manufacturer.Location" class="form-control" />
                <span asp-validation-for="Manufacturer.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.Zipcode" class="control-label"></label>
                <input asp-for="Manufacturer.Zipcode" class="form-control" />
                <span asp-validation-for="Manufacturer.Zipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
