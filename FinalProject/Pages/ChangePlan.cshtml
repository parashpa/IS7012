@page
@model FinalProject.Pages.ChangePlanModel
@{
    ViewData["Title"] = "ChangePlanForm";
}

<h1>Change Plan</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">

            <div class="form-group">
                <label class="control-label">Name</label>
                <div>
                    <p class="form-control-static">@Model.Membership.FirstName @Model.Membership.LastName</p>
                </div>
            </div>

            <input type="hidden" asp-for="ChangePlanForm.MemberId" />
            <div class="form-group">
                <label asp-for="ChangePlanForm.PlanID" class="control-label"></label>
                <select asp-for="ChangePlanForm.PlanID" class="form-control" asp-items="ViewBag.PlanID"></select>
                <span asp-validation-for="ChangePlanForm.PlanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change Plan" class="btn btn-danger" />
            </div>

        </form>
    </div>
</div>
