@page
@model FinalProject.Pages.TuckShops.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>List of tuckshop items</h3>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TuckShop[0].ApparelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuckShop[0].ApparelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuckShop[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TuckShop[0].Membership)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TuckShop) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApparelID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApparelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Membership.FirstName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
