@page
@model FinalProject.Pages.TuckShops.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Item details</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TuckShop.ID" />
            <div class="form-group">
                <label asp-for="TuckShop.ApparelID" class="control-label"></label>
                <input asp-for="TuckShop.ApparelID" class="form-control" />
                <span asp-validation-for="TuckShop.ApparelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TuckShop.ApparelName" class="control-label"></label>
                <input asp-for="TuckShop.ApparelName" class="form-control" />
                <span asp-validation-for="TuckShop.ApparelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TuckShop.Price" class="control-label"></label>
                <input asp-for="TuckShop.Price" class="form-control" />
                <span asp-validation-for="TuckShop.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TuckShop.MembershipID" class="control-label"></label>
                <select asp-for="TuckShop.MembershipID" class="form-control" asp-items="ViewBag.MembershipID"></select>
                <span asp-validation-for="TuckShop.MembershipID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
