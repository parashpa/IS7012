@page
@model FinalProject.Pages.Plans.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <h3>Plans directory</h3>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].PlanName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plan[0].Trainer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Plan) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
