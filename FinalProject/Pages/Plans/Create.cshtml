@page
@model FinalProject.Pages.Plans.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Enter new plan details</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plan.PlanName" class="control-label"></label>
                <input asp-for="Plan.PlanName" class="form-control" />
                <span asp-validation-for="Plan.PlanName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan.Day" class="control-label"></label>
                <input asp-for="Plan.Day" class="form-control" />
                <span asp-validation-for="Plan.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan.Duration" class="control-label"></label>
                <input asp-for="Plan.Duration" class="form-control" />
                <span asp-validation-for="Plan.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan.Price" class="control-label"></label>
                <input asp-for="Plan.Price" class="form-control" />
                <span asp-validation-for="Plan.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan.TrainerID" class="control-label"></label>
                <select asp-for="Plan.TrainerID" class ="form-control" asp-items="ViewBag.TrainerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
