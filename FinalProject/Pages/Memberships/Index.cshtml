@model FinalProject.Pages.Memberships.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <h3>Members directory</h3>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].MemberFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].ActiveMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Plan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Membership) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveMember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
